@model IEnumerable<puremy.Models.BlogPost>

<h1>Index</h1>

@foreach (var item in Model.Reverse()) {
    <div>
        <h2>@Html.DisplayFor(modelItem => item.Title)</h2>
        <p>@(item.Content.Length > 100 ? item.Content.Substring(0, 100) + "..." : item.Content)</p>
        <p>@Html.DisplayFor(modelItem => item.DatePosted)</p>
        <a class="textlink" href="@Url.Action("Details", new { id = item.Id })">Read More</a>
    </div>
}